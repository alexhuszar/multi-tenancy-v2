{
  "version": "0.2.0",
  "configurations": [
    // ── Server-side debugging (breakpoints in Server Components, route handlers, API routes)
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev:dataroom",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"],
      "outFiles": [
        "${workspaceFolder}/apps/dataroom/.next/**/*.js",
        "!**/node_modules/**"
      ]
    },

    // ── Client-side debugging (breakpoints in Client Components)
    {
      "name": "Next.js: debug client-side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/dataroom",
      "sourceMaps": true
    },

    // ── Full-stack (run both at once — most powerful)
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev:dataroom",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"],
      "outFiles": [
        "${workspaceFolder}/apps/dataroom/.next/**/*.js",
        "!**/node_modules/**"
      ],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/apps/dataroom"
      }
    }
  ]
}
