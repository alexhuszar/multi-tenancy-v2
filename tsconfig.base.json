{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@multi-tenancy-v2/source"],
    "baseUrl": ".",
    "paths": {
      "@multi-tenancy-v2/types": ["libs/types/src/index.ts"],
      "@multi-tenancy-v2/utils": ["libs/utils/src/index.ts"],
      "@multi-tenancy-v2/ui": ["libs/ui/src/index.ts"],
      "@multi-tenancy-v2/data-access": ["libs/data-access/src/index.ts"]
    }
  }
}
