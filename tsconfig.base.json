{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@multi-tenancy/source"],
    "baseUrl": ".",
    "paths": {
      "@multi-tenancy/appwrite": ["libs/services/appwrite/src/index.ts"],
      "@multi-tenancy/design-system/*": ["libs/ui/src/*"],
      "@multi-tenancy/utils": ["libs/utils/src/index.ts"],
    }
  }
}
